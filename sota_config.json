{
    "name": "model_cascade_bertlarge_ft1e-5_len60_wilberloss_bs2_ls8_3sent",
    "n_gpu": 1,
    "arch": {
        "type": "ThesisTaggingModel_cascade_bert_3sent",
        "args": {
            "dim_embeddings": 1024,
            "num_classes": 6,
            "hidden_size": 1024,
            "num_layers": 1,
            "rnn_dropout": 0.2,
            "clf_dropout": 0.3,
            "bidirectional": false
        }
    },
    "data_loader": {
        "type": "ThesisTaggingArticleDataLoader_bert",
        "args": {
            "train_data_path": "data/train_processed.pkl",
            "test_data_path": "data/test_processed.pkl",
            "batch_size": 1,
            "shuffle": true,
            "num_classes": 6,
            "validation_split": 0.1,
            "num_workers": 2,
            "padded_len": 60
        }
    },
    "embedding": {
        "type": "fasttext_embedding",
        "args": {
            "rawdata_path": "data/crawl-300d-2M.vec"
        },
        "pkl_path": "data/embedding_class.pkl"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-5,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "my_loss",
    "metrics": [
        "accuracy",
        "microF1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 8,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },
    "test": {
        "sample_submission_file_path": "data/task1_sample_submission.csv",
        "only_half": true
    }
}
